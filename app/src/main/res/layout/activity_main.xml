<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="@color/black"
        app:strokeColor="@color/black"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/buttonRow1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:background="@color/black"
            android:elevation="4dp"
            android:gravity="end"
            android:padding="16dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@id/buttonRow1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </com.google.android.material.card.MaterialCardView>


    <LinearLayout
        android:id="@+id/buttonRow1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardview">

        <Button
            android:id="@+id/button0"
            android:backgroundTint="@color/grey"
            style="@style/CalculatorButton"
            android:text="AC" />

        <Button
            android:backgroundTint="@color/grey"
            android:id="@+id/buttonDot"
            style="@style/CalculatorButton"
            android:text="+/-" />

        <Button
            android:backgroundTint="@color/grey"
            android:id="@+id/buttonPercent"
            style="@style/CalculatorButton"
            android:text="%" />

        <Button
            android:id="@+id/buttonDivide"
            android:backgroundTint="@color/yellow"
            style="@style/CalculatorButton"
            android:text="รท" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonRow2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonRow1">

        <Button
            android:id="@+id/button7"
            style="@style/CalculatorButton"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            style="@style/CalculatorButton"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            style="@style/CalculatorButton"
            android:text="9" />

        <Button
            android:id="@+id/buttonMultiply"
            style="@style/CalculatorButton"
            android:backgroundTint="@color/yellow"
            android:text="ร" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonRow3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonRow2">

        <Button
            android:id="@+id/button4"
            style="@style/CalculatorButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            style="@style/CalculatorButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            style="@style/CalculatorButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6" />

        <Button
            android:id="@+id/buttonMinus"
            android:backgroundTint="@color/yellow"
            style="@style/CalculatorButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-" />
    </LinearLayout>

    <!-- Baris Tombol 4 -->
    <LinearLayout
        android:id="@+id/buttonRow4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonRow3">

        <Button
            android:id="@+id/button1"
            style="@style/CalculatorButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            style="@style/CalculatorButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            style="@style/CalculatorButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3" />

        <Button
            android:id="@+id/buttonPlus"
            style="@style/CalculatorButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/yellow"
            android:text="+" />
    </LinearLayout>

    <!-- Baris Tombol Operasi Lainnya -->
    <LinearLayout
        android:id="@+id/buttonRow5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonRow4">

        <Button
            android:id="@+id/buttonClear"
            style="@style/CalculatorButton"
            android:layout_width="98dp"
            android:text="0" />

        <Button
            android:id="@+id/buttonDelete"
            style="@style/CalculatorButton"
            android:text="," />

        <Button
            android:id="@+id/buttonEquals"
            android:backgroundTint="@color/yellow"
            style="@style/CalculatorButton"
            android:text="=" />

        <!-- Tambahkan tombol tambahan jika diperlukan -->
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
